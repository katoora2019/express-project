<%- include('../partials/header.ejs') %>
<div class="container">
    <h1>Edit Post</h1>
    <form method="POST" action="/posts/<%= post.id %>">
        <input type="hidden" name="_method" value="PATCH" />

        <div class="form-group">
            <input
                type="text"
                class="form-control"
                name="title"
                value="<%= post.title %>"
            />
        </div>
        <div class="form-group">
            <input 
                type="url" 
                class="form-control" 
                name="imageUrl" 
                value="<%= post.imageUrl %>"
            />
        </div>

        <div class="form-group">
            <textarea 
                name="content" 
                class="form-control" 
                ><%= post.content %>
            </textarea>
        </div>

      <input type="submit" class="btn btn-outline-success" value="Submit" />
    </form>
</div>
<%- include('../partials/footer.ejs') %>