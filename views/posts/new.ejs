<%- include('../partials/header.ejs') %>

<div class="container">
<h1>New Post</h1>

  <form action="/posts" method="POST">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Enter title"
      />
    </div>
<div class="form-group">
      <input 
          type="url" 
          class="form-control" 
          name="imageUrl" 
          placeholder="e.g. http://yourimageUrl.com" />
      </div>

      <div class="form-group">
          <textarea 
              name="content" 
              class="form-control" 
              placeholder="Enter the content of your post">
          </textarea>
      </div>

      <input type="submit" class="btn btn-outline-success" value="Submit" />
  </form>
</div>
