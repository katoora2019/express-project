<%- include('../partials/header.ejs') %>
<div class="container">
    <h1>Posts</h1>

    <div class="post-card">
        <% for(let post of posts) { %> 
            <div class="card mb-4">
                <div class="card body">
                    <a href="/posts/<%= post.id %>">
                        <h5 class="card-title"><%= post.title %> </h5>
                    </a>
                    <img class="smal-image" src="<%= post.imageUrl %>">
                    <p class="card-text"><%= post.content %> </p>
                </div>
            </div>
        <% } %>
    </div>
</div>
<%- include('../partials/footer.ejs') %>